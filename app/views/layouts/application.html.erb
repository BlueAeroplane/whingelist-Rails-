<!DOCTYPE html>
<html>
<head>
  <title>Whinge List</title> 
  


  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <link href="http://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css" rel="stylesheet"></link>
  <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet"></link>
  <%= csrf_meta_tags %>
</head>
<body> 

    <% if notice %>
      <div id="notice_wrapper">
      <p class="notice"><%= notice %></p>  
      </div>
        <% elsif alert %> 
      <div id="notice_wrapper">
      <p class="alert"><%= alert %></p> 
      </div> 
    <% end %>

  
 



  <header>
    <div class="wrapper clearfix">
      <div id="logo">
       <%= link_to "Whinge List", root_path %> <i class="fa fa-pencil-square-o"></i> 
      </div>
       <nav> 

        <% if user_signed_in? %>
          <%= link_to current_user.name, edit_user_registration_path %>
          <%= link_to "Add New Suff", new_post_path, class: "button" %> 
        <% else %> 
          <%= link_to "Sign in", new_user_session_path %>
          <%= link_to "Sign Up", new_user_registration_path, class: "button"  %>
        <% end %>
     


       <div id="search">    
        <%= form_tag posts_path, :method => :get do %>
          
          <%= text_field_tag :search, params[:search] %>  
          </div>
          <%= submit_tag "Go!", :name => nil, class: "button" %> 
           
         
           
        <% end %>
        
    
     
          

      </nav>
    </div>
  </header>
   
  <div class="wrapper"> 
    <%= yield  %>
  </div>

  
  <nav id="sidebar_nav">
  
</nav> 




</body> 
</html>
 